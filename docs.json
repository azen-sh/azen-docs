{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Azen AI Memory Layer API",
  "api": {
  "baseUrl": "https://api.azen.sh/api/v1",
  "auth": {
    "method": "apiKey",
    "name": "azen-api-key",
    "placement": "header"
    }
  },
  "colors": {
    "primary": "#3B82F6",
    "light": "#A3A3A3",
    "dark": "#020617"
  },
  "background": { 
    "color": {
      "light": "#FFFFFF",
      "dark": "#000000"
    }
  },
  "fonts": {
    "heading": {
      "family": "JetBrains Mono",
      "weight": 700 
    },
    "body": {
      "family": "Inter",
      "weight": 400 
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
    {
      "tab": "Docs",
      "icon": "book-open",
      "groups": [
        {
          "group": "Getting started",
          "pages": [
            "introduction",        
            "quickstart"    
          ]
        },
        {
          "group": "Concepts",
          "pages": [
            "concepts/memory-layer",   
            "concepts/memory-retrieval"          
          ]
        }
      ]
    },
    {
      "tab": "API reference",
      "icon": "code",
      "groups": [
        {
          "group": "Overview",
          "pages": [
            "api-reference/introduction"
          ]
        },
        {
          "group": "Endpoints",
          "openapi": {
            "source": "/api-reference/openapi.yml",
            "directory": "api-reference"
          }
        }
      ]
    }    
  ],
    "global": {
    "anchors": [
      {
        "anchor": "Dashboard",
        "href": "https://console.azen.sh",
        "icon": "window"
      },
      {
        "anchor": "GitHub",
        "href": "https://github.com/azen-sh",
        "icon": "github"
      }
    ]
  }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:govindvashishat@gmail.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://console.azen.sh"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
