{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Azen AI Memory Layer API",
  "api": {
    "baseUrl": "https://api.azen.sh/api/v1",
    "auth": {
      "method": "apiKey",
      "name": "azen-api-key",
      "placement": "header"
    }
  },
  "colors": {
    "primary": "#3B82F6",
    "light": "#A3A3A3",
    "dark": "#020617"
  },
  "background": {
    "color": {
      "light": "#FFFFFF",
      "dark": "#000000"
    }
  },
  "fonts": {
    "heading": {
      "family": "Roboto",
      "weight": 600
    },
    "body": {
      "family": "Inter",
      "weight": 400
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "icon": "book-open",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/memory-layer",
              "concepts/memory-retrieval"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "icon": "code",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "/api-reference/openapi.yml",
            "pages": [
              {
                "group": "Memory",
                "pages": [
                  "POST /memory",
                  "GET /memory",
                  "GET /memory/{id}",
                  "DELETE /memory/{id}",
                  "POST /memory/search"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.azen.sh",
          "icon": "window"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/azen-sh",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:govindvashishat@gmail.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.azen.sh"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Govind_vash02",
      "github": "https://github.com/azen-sh",
      "linkedin": "https://www.linkedin.com/in/govind-vashishat-217701319/"
    }
  }
}
